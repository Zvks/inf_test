// Ввести с клавиатуры три вещественных числа. На следующей строке ввести номер функции. Если номер функции равен 1, 
// то посчитать сумму чисел, если номер функции равен 2, то посчитать разность чисел, в противном случае посчитать произведение чисел. 
// Результат вывести в экспоненциальной форме. Форматированные вывод. Точность представления чисел - два знака после запятой.
#include <iostream>

using namespace std;
int main() {
    int a;
    float n1,n2,n3;
    cin >> n1 >> n2 >> n3;
    cin >> a; // scanf("%c", &a);
    cout.precision(2);
    if (a == 1) cout << scientific << n1+n2+n3;
    else if (a == 2) cout << scientific << n1-n2-n3;
    else cout << scientific << n1*n2*n3;
}
