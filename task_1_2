// Ввести с клавиатуры два целочисленных числа. Вывести на экран четные числа. Если два числа четные, то вывести нуль.
#include <iostream>
using namespace std;
int main() {
	int a, b;
	cin >> a >> b;
	if (a % 2 != 0 && b % 2 != 0) cout << "0" << endl;
	else if (a % 2 == 0) cout << a;
	else if (b % 2 == 0) cout << b;
}
